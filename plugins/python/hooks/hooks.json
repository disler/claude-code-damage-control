{
  "PreToolUse": [
    {
      "matcher": "Bash",
      "hooks": [{
        "type": "command",
        "command": "uv run \"$PLUGIN_DIR\"/hooks/bash-tool-damage-control.py",
        "timeout": 5
      }]
    },
    {
      "matcher": "Edit",
      "hooks": [{
        "type": "command",
        "command": "uv run \"$PLUGIN_DIR\"/hooks/edit-tool-damage-control.py",
        "timeout": 5
      }]
    },
    {
      "matcher": "Write",
      "hooks": [{
        "type": "command",
        "command": "uv run \"$PLUGIN_DIR\"/hooks/write-tool-damage-control.py",
        "timeout": 5
      }]
    }
  ]
}
